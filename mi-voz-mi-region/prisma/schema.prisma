generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Publicacion {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  titulo       String
  contenido    String
  departamento String
  grupoSocial  String
  categoria    String
  autor        String
  correo       String
  imagen       String
  fecha        DateTime @default(now())
}